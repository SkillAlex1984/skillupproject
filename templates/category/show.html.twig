{% extends 'base.html.twig' %}

{% block title %}  {{ parent() }}/{{ category.name }} {% endblock %}

{% block body %}
        {% for message in app.flashes('notice') %}
            <p>{{ message }}</p>
        {% endfor %}
        <h1 style="text-align: center">{{ category.name }}<br></h1>
        <div>
            {% include 'partials/products.html.twig' with {'products': category.products} %}
        </div>
{% endblock %}