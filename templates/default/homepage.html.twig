{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
        <div class="row">
            {% for product in topProducts %}
                <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2 product">
                    {% if product.imageName %}
                        <img src="{{ vich_uploader_asset(product, 'imageFile') | imagine_filter('product_list')}}" class="img-thumbnail img-responsive center-block" >
                    {% endif %}
                    <p>
                        <span class="price">Цена: {{ product.price|number_format(2, ',', ' ') }}</span>
                        Производитель: {{ product.name }}
                    </p>
                </div>
            {% endfor %}
        </div>

